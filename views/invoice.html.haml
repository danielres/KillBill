!!!
%html
  %head
    %link{ href: '/main.css', rel: :stylesheet, type: 'text/css' }

  %body
    %article.invoice
      %h1 Invoice

      %section.meta
        %h1 Meta
        %dl.number
          %dt Invoice number
          %dd= number
        %dl.emit_date
          %dt Emit date
          %dd= emit_date
        %dl.due_date
          %dt Due date
          %dd= due_date

      %section.owner_info
        %h1 Owner info
        %address= owner

      %section.client_info
        %h1 Client name and contact info
        %address= client

      %section.details
        %h1 Invoice details
        %table

          %thead
            %tr
              %th.quantity              Quantity
              %th.description           Description
              %th.unitary_price.numeric Unitary price
              %th.total.numeric         Total

          %tbody
            - entries.each do |e|
              %tr.entry
                %td
                  1
                %td
                  %dl
                    %dt= e.name
                    %dd= e.desc
                %td
                  %dd.ex_vat_total= e.ex_vat_total
                %td
                  %dd.ex_vat_total= e.ex_vat_total

          %tfoot
            %tr.ex_vat_total
              - colspan = 3
              %td{ colspan: colspan }
              %td
                %dl
                  %dt Total HT
                  %dd= ex_vat_total
            %tr.vat_total
              %td{ colspan: colspan }
              %td
                %dl
                  %dt +VAT #{ vat }%
                  %dd= vat_total
            %tr.inc_vat_total
              %td{ colspan: colspan }
              %td
                %dl
                  %dt Total TTC
                  %dd= inc_vat_total

